# ==============================================
# GENERAL BRAND CONFIGURATION
# ==============================================
BRAND_NAME="Your Brand Name"
BRAND_URL="https://www.yourdomain.com"
SUPPORT_EMAIL="support@yourdomain.com"
SUPPORT_PHONE="+212 600-000000"

# ==============================================
# THEME CONFIGURATION (For Backend/Email)
# ==============================================
PRIMARY_COLOR="#C8102E"
SECONDARY_COLOR="#006233"

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=3000
NODE_ENV=production
ADMIN_EMAIL="admin@yourdomain.com"
FROM_EMAIL="noreply@yourdomain.com"
FROM_NAME="Your Brand Store"

# ==============================================
# SENDIT INTEGRATION (Shipping)
# ==============================================
# Your Sendit API Credentials
SENDIT_PUBLIC_KEY="YOUR_PUBLIC_KEY_HERE"
SENDIT_SECRET_KEY="YOUR_SECRET_KEY_HERE"
# ID of the city where you ship FROM (See Sendit District List)
SENDIT_PICKUP_DISTRICT_ID=1
# Enable/Disable various Sendit features (1 = On, 0 = Off)
SENDIT_ALLOW_OPEN=1
SENDIT_ALLOW_TRY=1
SENDIT_PRODUCTS_FROM_STOCK=1
SENDIT_OPTION_EXCHANGE=0

# ==============================================
# PAYPAL INTEGRATION (Payment)
# ==============================================
# Set to 'true' for sandbox testing, 'false' for live
PAYPAL_USE_SANDBOX=true
# Live Credentials
PAYPAL_CLIENT_ID_LIVE="YOUR_LIVE_CLIENT_ID"
PAYPAL_SECRET_KEY_LIVE="YOUR_LIVE_SECRET_KEY"
# Sandbox Credentials
PAYPAL_CLIENT_ID_SANDBOX="YOUR_SANDBOX_CLIENT_ID"
PAYPAL_SECRET_KEY_SANDBOX="YOUR_SANDBOX_SECRET_KEY"
# Exchange rate from Local Currency (e.g. MAD) to USD
PAYPAL_EXCHANGE_RATE=0.1

# ==============================================
# META (FACEBOOK) ADS CONFIGURATION
# ==============================================
# Pixel ID for Client-Side Tracking
META_PIXEL_ID="YOUR_PIXEL_ID"
# Access Token for Server-Side Conversions API (CAPI)
META_ACCESS_TOKEN="YOUR_CAPI_ACCESS_TOKEN"
# Test Event Code (Optional, for testing events in Events Manager)
META_TEST_EVENT_CODE=""

# ==============================================
# GOOGLE ANALYTICS
# ==============================================
GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# ==============================================
# SECURITY
# ==============================================
# Secret key for Webhook (GitHub Auto-Deploy)
DEPLOY_SECRET="your-secure-webhook-secret"
